@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Reset</title>
    @Styles.Render("~/css")
    @Scripts.Render("~/js")
</head>
<body>
    <div class="navbar-fixed">
        <nav class="light-blue lighten-1">
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo"><i class="large mdi-action-dashboard"></i> Mat_CSS</a>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a class="item" href="@Url.Action("Login", "Home")">
                            <i class="mdi-action-lock-open right"></i>Login
                        </a>
                    </li>
                </ul>
                <ul id="nav-mobile" class="side-nav">
                    <li>
                        <a class="item" href="@Url.Action("Login", "Home")">
                            <i class="mdi-action-lock-open right"></i>Login
                        </a>
                    </li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
            </div>
        </nav>
    </div>

    <div class="container" id="ResetPage">

        <div class="row">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                <div class="card">
                    <div class="card-image">
                        <img src="../Content/images/lake.jpg">
                        <span class="card-title">Reset Password</span>
                    </div>
                    <div class="card-content">
                        <div class="progress" data-bind="visible: showProgress">
                            <div class="indeterminate">
                            </div>
                        </div>
                        <form class="col s12">
                            <div class="input-field col s12">
                                <i class="mdi-communication-quick-contacts-mail prefix"></i>
                                <input id="email" type="text" class="validate" data-bind="value: Email">
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field col s12">
                                <button class="right btn waves-effect waves-light green" data-bind="click: reset">
                                    Reset
                                    <i class="mdi-content-send right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/Content/js/app/reset.js"></script>