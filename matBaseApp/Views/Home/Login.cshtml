@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/css")
    @Scripts.Render("~/js")
</head>
<body>
    <div class="navbar-fixed">
        <nav class="light-blue lighten-1">
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo"><i class="large mdi-action-dashboard"></i> Mat_CSS</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="#"><i class="mdi-navigation-refresh right"></i>Reset Password</a></li>
                </ul>
                <ul id="nav-mobile" class="side-nav">
                    <li><a href="#"><i class="mdi-navigation-refresh right"></i>Reset Password</a></li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
            </div>
        </nav>
    </div>
    
    <div class="container" id="LoginPage">
        
        <div class="row">            
            <div class="col s12 m12">
                <div class="card light-blue darken-3">
                    <div class="card-content white-text">
                        <span class="card-title">Login Below</span>
                        <p>
                            Enter your correct user details {\ Username \} and {\ Password \}.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col s12 m12">
                <div class="card">
                    <div class="card-content">
                        <div class="progress" data-bind="visible: showProgress">
                            <div class="indeterminate">
                            </div>
                        </div>
                        <form class="col s12">
                            <div class="input-field col s12">
                                <i class="mdi-action-account-circle prefix"></i>
                                <input id="icon_username" type="text" class="validate" data-bind="value: Username">
                                <label for="icon_username">User Name</label>
                            </div>
                            <div class="input-field col s12">
                                <i class="mdi-action-lock-open prefix"></i>
                                <input id="icon_password" type="password" class="validate" data-bind="value: Password">
                                <label for="icon_password">Password</label>
                            </div>
                            <div class="input-field col s12">
                                <input type="checkbox" id="rememberMe" />
                                <label for="rememberMe">Remember Me</label>
                            </div>

                            <div class="input-field col s12">
                                <div class="divider"></div>
                            </div>
                            <div class="input-field col s12">
                                <button class="right btn waves-effect waves-light" data-bind="click: login">
                                    Submit
                                    <i class="mdi-content-send right"></i>
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

